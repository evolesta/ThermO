<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ThermO_App.Views.Thermostat"
             Title="Thermostaat">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Temperatuur:" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" FontSize="Title" />
            <Label Text="-- °C" x:Name="currentTempLabel" FontSize="Large" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />

            <Label Text="Gewenst:" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
            <Label Text="-- °C" x:Name="desiredTempLabel" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
            <Stepper x:Name="desiredTempStepper" 
                     Minimum="15" Maximum="25" Increment="0.5"
                     HorizontalOptions="Center" VerticalOptions="Center" ValueChanged="desiredTempStepper_ValueChanged" 
                     />
            <Button Text="Verzenden" VerticalOptions="Center" HorizontalOptions="Center" Clicked="Button_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>